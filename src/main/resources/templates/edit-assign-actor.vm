<tr bgcolor="#ffffff">
    <td align="right" valign="top" bgcolor="#fffff0">
        <span class="label">Destination status:</span>
    </td>
    <td bgcolor="#ffffff" nowrap>
        <select id="selectedStatus" name="selectedStatus">
        #foreach($status in $statuses)
            <option #if($selectedStatus && $selectedStatus == $status)selected="selected"#end value="$status">$status</option>
        #end
        </select>
        <br><font size="1">Choose status to define an user who performed workflow step</font>
    </td>
</tr>